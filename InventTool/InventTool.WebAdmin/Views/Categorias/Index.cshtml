@model IEnumerable<InventTool.BL.Categoria>

@{
    ViewBag.Title = "Categorias";
}

 <b style="font-size  : 40px">Categorias</b>
<br>
<br>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "btn btn-info btn-sm", style = "color: white;" })
            @Html.ActionLink("Detalle", "Detalle", new { id = item.Id }, new { @class = "btn btn-success btn-sm", style = "color: white;" })
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }, new { @class = "btn btn-danger btn-sm", style = "color: white;" })
        </td>
    </tr>
}

</table>

<p class="btn btn-default btn-sm" , style="color: #3366BB;">
    @Html.ActionLink("Nueva Categoria", "Crear")
</p>