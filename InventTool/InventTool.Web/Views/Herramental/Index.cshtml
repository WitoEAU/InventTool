@model List<InventTool.BL.Herramental>
@{
    ViewBag.Title = "Index";
}

<h2>Herramental Tooling</h2>


<table class="table border-radius=20px">
    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Descripción
            </th>
            <th>
                Media
            </th>
            <th>
                Serie
            </th>
        </tr>
    </thead>


    @foreach (var herramental in Model)
    {
        <tr>
            <td class="Td1">@herramental.Id</td>
            <td class="Td1">@herramental.Descripcion</td>
            <td class="Td1">@herramental.Medida</td>
            <td class="Td1">@herramental.Serie</td>
        </tr>

    }


</table>